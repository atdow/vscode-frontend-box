{
  "name": "frontend-box",
  "displayName": "前端盒子",
  "description": "VSCode 里订阅查看前端技术文章",
  "version": "0.0.8",
  "repository": {
    "type": "git",
    "url": "https://github.com/giscafer/vscode-frontend-box.git"
  },
  "keywords": [
    "前端盒子",
    "前端博客",
    "前端学习",
    "公众号",
    "博客",
    "RSS"
  ],
  "icon": "resources/logo.png",
  "engines": {
    "vscode": "^1.51.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "publisher": "giscafer",
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "frontendBlog",
          "title": "前端盒子",
          "icon": "resources/logo.svg"
        }
      ]
    },
    "views": {
      "frontendBlog": [
        {
          "id": "view.blog",
          "name": "博客"
        },
        {
          "id": "view.mark",
          "name": "收藏夹"
        },
        {
          "id": "view.other",
          "name": "其他功能 WIP……"
        }
      ]
    },
    "commands": [
      {
        "command": "mark.add",
        "title": "添加网址",
        "icon": {
          "light": "resources/light/add.svg",
          "dark": "resources/dark/add.svg"
        }
      },
      {
        "command": "mark.delete",
        "title": "删除网址",
        "icon": {
          "light": "resources/light/del.svg",
          "dark": "resources/dark/del.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "mark.add",
          "when": "view == view.mark",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "mark.delete",
          "when": "view == view.mark",
          "group": "group1"
        },
        {
          "command": "mark.delete",
          "when": "view == view.mark",
          "group": "inline"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "view.other",
        "contents": "敬请关注！！欢迎PR >> [Github](https://github.com/giscafer/vscode-frontend-box)"
      }
    ],
    "configuration": {
      "properties": {
        "frontend-box.markbook": {
          "type": "array",
          "default": [
            {
              "title": "Web 技术周刊",
              "url": "https://www.yuque.com/awesome/fe_weekly"
            },
            {
              "title": "科技爱好者周刊",
              "url": "https://www.yuque.com/ruanyf/weekly"
            },
            {
              "title": "产品经理知识整理",
              "url": "https://www.yuque.com/weis/pm"
            }
          ],
          "description": "收藏网址"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts  --ignore-path .gitignore",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/_test/runTest.js",
    "deploy": "vsce publish --yarn",
    "commitmsg": "commitlint -e $GIT_PARAMS"
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "npm run commitmsg"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix --ext .js",
      "git add ."
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.51.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "husky": "^4.3.4",
    "lint-staged": "^10.5.3",
    "mocha": "^7.1.2",
    "prettier": "^2.2.1",
    "typescript": "^3.8.3",
    "vsce": "^1.81.1",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "amplitude": "^5.1.4",
    "axios": "^0.21.0",
    "es6-promisify": "^6.1.1",
    "event-emitter-enhancer": "^2.0.0",
    "eventemitter2": "^6.4.3",
    "events": "^3.2.0",
    "get-port": "^5.1.1",
    "karma-chrome-launcher": "^3.1.0",
    "os-name": "^4.0.0",
    "public-ip": "^4.0.2",
    "puppeteer-core": "^5.5.0",
    "uuid": "^8.3.1",
    "which-chrome": "^0.1.1"
  }
}
